{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "..",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "noEmit": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "allowJs": true,
        "checkJs": false
    },
    "include": [
        "./**/*.ts",
        "./**/*.js",
        "../next-env.d.ts",
        "../app/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}